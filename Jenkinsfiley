pipeline {
    agent any

    environment {
        WAR_NAME = "App02.war"
        TOMCAT_HOME = "C:\\Tomcat 9.0"
    }

    tools {
        maven 'apache-maven-3.9.5'
    }

    stages {

        stage('Checkout SCM') {
            steps {
                git branch: 'main', 
                    credentialsId: 'Github_username_password', 
                    url: 'https://github.com/dylandsilva688/API_Projects.git'
            }
        }

        stage('Build Maven Project') {
            steps {
                bat '''
                    echo Building the WAR file...
                    mvn clean package -DskipTests
                '''
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                bat """
                    echo Stopping Tomcat (if running)...
                    call "%TOMCAT_HOME%\\bin\\shutdown.bat" || echo Tomcat not running

                    echo Removing old deployment...
                    del /Q "%TOMCAT_HOME%\\webapps\\App02.war"
                    rmdir /S /Q "%TOMCAT_HOME%\\webapps\\App02"

                    echo Copying new WAR...
                    xcopy /Y "target\\App02.war" "%TOMCAT_HOME%\\webapps\\"

                    echo Starting Tomcat...
                    call "%TOMCAT_HOME%\\bin\\startup.bat"
                """
            }
        }
    }
}














